<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RusalFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavBarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="BottomNavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector</item>
        <item name="backgroundTint">?attr/colorPrimarySurface</item>
    </style>

</resources>