<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="font_normal">
        <item name="android:fontFamily">@font/gilroy_light</item>
    </style>

    <style name="font_bold">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="basic_mtrl_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/mtrl_btn_height</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/btns_text_size</item>
        <item name="cornerRadius">@dimen/basic_btn_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/mtrl_btn_blue_bg_color_selector</item>

    </style>

    <style name="input_field_text_input_layout_style">
        <item name="boxBackgroundColor">#79E8E8E8</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="hintTextColor">@color/edit_text_text_and_hint_color</item>
        <item name="boxStrokeColor">@color/edit_text_text_and_hint_color</item>
    </style>

    <style name="email_input_field_text_input_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/edit_text_text_and_hint_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="password_input_field_text_input_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="android:textColor">@color/edit_text_text_and_hint_color</item>
        <item name="android:inputType">textPassword</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLength">@integer/password_length</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.6dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="common_rv_item_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/rv_item_name_color</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="common_rv_item_description">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

</resources>