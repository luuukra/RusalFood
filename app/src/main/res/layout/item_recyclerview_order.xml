<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white">

    <View
        style="@style/divider2"
        android:background="#ECECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orders_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hints_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/orders_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hints_price"
        android:textColor="#8F8F8F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/orders_place_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/orders_place_name"
        app:layout_constraintTop_toBottomOf="@+id/orders_place_name"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/orders_status_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders_status"
        android:textColor="#8F8F8F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/orders_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/orders_price"
        app:layout_constraintTop_toBottomOf="@+id/orders_price"
        app:layout_constraintVertical_bias="0.391" />

    <TextView
        android:id="@+id/orders_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/hints_status_pending"
        android:textColor="#8F8F8F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/orders_status_h"
        app:layout_constraintStart_toEndOf="@+id/orders_status_h"
        app:layout_constraintTop_toTopOf="@+id/orders_status_h"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/orders_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hints_date"
        android:textColor="#8F8F8F"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163" />

    <TextView
        android:id="@+id/orders_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textColor="#8F8F8F"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <View
        style="@style/divider2"
        android:background="#ECECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>